{
  "compilerOptions": {
    "esModuleInterop": true,
    "noImplicitAny": true,
    "outDir": "./dist/",
    "module": "commonjs",
    "target": "ES5",
    "jsx": "react",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "noUnusedLocals": true,
    "paths": {
      "@common": ["src/common/"],
      "@icons": ["src/common/icons/"],
      "@colors": ["src/colors.tsx"],
      "@settings": ["src/settings.tsx"]
    },
    "types": ["jest"]
  },
  "include": ["src/**/*.tsx"],
  "exclude": ["src/**/*Json*", "src/**/*JSON*"]
}
